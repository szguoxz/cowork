{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Default capabilities for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "core:event:default",
    "core:event:allow-listen",
    "core:event:allow-emit",
    {
      "identifier": "shell:allow-open",
      "allow": [
        { "url": "https://**" },
        { "url": "http://**" },
        { "url": "mailto:**" },
        { "url": "tel:**" },
        { "url": "file://**" },
        { "url": "[A-Z]://**" },
        { "url": "[A-Z]:\\\\**" },
        { "url": "/**" }
      ]
    },
    "dialog:default",
    "fs:default",
    "process:default",
    "notification:default"
  ]
}
