{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Cowork",
  "version": "0.1.0",
  "identifier": "com.cowork.app",
  "build": {
    "frontendDist": "../../../frontend/dist"
  },
  "app": {
    "windows": [
      {
        "title": "Cowork",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline'"
    },
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
